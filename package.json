{
  "name": "mStable-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn eslint './src/**/*.{ts,tsx}' --fix",
    "provision:contracts": "sh ./scripts/provision.sh",
    "codegen": "yarn typechain --target ethers --outDir src/typechain './lib/mStable-contracts/build/*.json'",
    "truffle:migrate": "cd ./lib/mStable-contracts && yarn migrate",
    "truffle:script": "cd ./lib/mStable-contracts && yarn script",
    "postinstall": "yarn provision:contracts && yarn codegen"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "eslint-plugin-unicorn": "^16.1.1",
    "prettier": "^1.19.1",
    "typechain": "^1.0.5",
    "typechain-target-ethers": "^1.0.3",
    "typescript": "^3.8.2"
  }
}
